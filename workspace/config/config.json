{
  "llm": {
    "provider": "openai",
    "model": "mimo-v2-flash",
    "base_url": "https://api.xiaomimimo.com/v1",
    "api_key_env": "MIMO_API_KEY"
  },
  "channels": {
    "cli": {
      "enabled": true
    },
    "discord": {
      "enabled": true
    },
    "cron": {
      "enabled": false
    }
  },
  "mcp_servers": {
    "example_stdio": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-everything"
      ],
      "env": {},
      "tool_timeout": 30
    },
    "example_http": {
      "url": "http://localhost:8080/sse",
      "headers": {
        "Authorization": "Bearer my-secret"
      },
      "tool_timeout": 60
    }
  }
}